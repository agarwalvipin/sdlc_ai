{
    "$id": "https://sdlc.ai/schemas/decision-record.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Decision Record",
    "description": "Records the final human decision on the proposed design.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "phase",
        "decision",
        "rationale",
        "human_signature",
        "date"
    ],
    "properties": {
        "phase": {
            "type": "string",
            "const": "decision"
        },
        "decision": {
            "type": "string",
            "enum": [
                "REFACTOR",
                "REBUILD",
                "ABORT",
                "APPROVED"
            ],
            "description": "The strategic choice made by the human."
        },
        "rationale": {
            "type": "string",
            "description": "Reasoning behind the decision."
        },
        "human_signature": {
            "type": "string",
            "description": "Explicit string typed by the user to sign off."
        },
        "date": {
            "type": "string",
            "format": "date"
        }
    }
}