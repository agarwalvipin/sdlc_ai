{
    "$id": "https://sdlc.ai/schemas/design-spec.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Design Specification",
    "description": "Formal definition of the architectural changes.",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "phase",
        "architectural_changes",
        "component_impact",
        "alternatives_considered"
    ],
    "properties": {
        "phase": {
            "type": "string",
            "const": "design"
        },
        "architectural_changes": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "component",
                    "change_type",
                    "description"
                ],
                "properties": {
                    "component": {
                        "type": "string"
                    },
                    "change_type": {
                        "type": "string",
                        "enum": [
                            "NEW",
                            "MODIFY",
                            "DELETE",
                            "REFACTOR"
                        ]
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        },
        "component_impact": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "List of components that might be indirectly affected."
        },
        "alternatives_considered": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "name",
                    "pros",
                    "cons",
                    "selected"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "pros": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "cons": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "selected": {
                        "type": "boolean"
                    }
                }
            }
        }
    }
}