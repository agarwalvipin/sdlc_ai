{
  "$id": "https://sdlc.ai/schemas/execution-plan.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Execution Plan",
  "description": "Deterministic plan for code execution.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "strategy",
    "milestone_title",
    "epics"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "strategy": {
      "type": "string",
      "enum": [
        "REFACTOR",
        "REBUILD",
        "FEATURE"
      ]
    },
    "milestone_title": {
      "type": "string"
    },
    "source_artifacts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "epics": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "title",
          "tasks"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "owner": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "title",
                "type",
                "context_files",
                "acceptance_criteria"
              ],
              "properties": {
                "title": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "context_files": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "acceptance_criteria": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}